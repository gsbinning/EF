@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #000;
            color: #fff;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        h1, p, h2 {
            text-align: center;
        }

        h1 {
            font-family: cursive;
            font-style: italic;
            font-size: 36px;
            margin-bottom: 20px;
        }

        p {
            font-size: 16px;
        }

        #numberForm {
            text-align: center;
            margin: 20px auto;
        }

        input[type="number"] {
            width: 100px;
            padding: 8px;
            margin: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #fff;
            color: #000;
        }

        button[type="submit"] {
            padding: 10px 20px;
            border-radius: 25px;
            border: none;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
            text-transform: uppercase;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        #output {
            text-align: center;
            font-size: 18px;
            line-height: 1.5;
            margin-top: 20px;
        }

        .blue {
            color: #007bff;
        }

        .orange {
            color: orange;
        }

        .white {
            color: #fff;
        }

        .logo {
            display: block;
            margin: 0 auto 20px;
            max-width: 200px;
        }
    </style>
</head>
<body>
    <div class="container">
        <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/a/ae/Eurofins_Scientific_Logo.svg" alt="Eurofins Logo">
        <h1>Welcome to Eurofins</h1>
        <p class="white" style="font-size: 14px;">Eurofin Values: Customer Focus, Quality, Competence & team spirit & Integrity</p>
        <p class="white" style="font-size: 14px;">Try clicking "generate" to create a number! Let's see if you can detect the underlying pattern.</p>

        <form id="numberForm">
            <label for="startNumber">Start Number:</label>
            <input type="number" id="startNumber" name="startNumber" value="1">
            <label for="endNumber">End Number:</label>
            <input type="number" id="endNumber" name="endNumber" value="100">
            <button type="submit">Generate</button>
        </form>

        <div id="output"></div>
    </div>

    <script>document.getElementById('numberForm').addEventListener('submit', function (event) {
            event.preventDefault();

            var startNumber = parseInt(document.getElementById('startNumber').value);
            var endNumber = parseInt(document.getElementById('endNumber').value);

            var output = document.getElementById('output');
            output.innerHTML = '';

            for (var i = startNumber; i <= endNumber; i++) {
                var result = '';
                if (i % 3 === 0 && i % 5 === 0) {
                    result = '<span class="orange">Eurofins</span>';
                } else if (i % 3 === 0) {
                    result = '<span class="blue">Three</span>';
                } else if (i % 5 === 0) {
                    result = '<span class="blue">Five</span>';
                } else {
                    result = i.toString();
                }
                output.innerHTML += result + ' ';
            }
        });</script>
</body>
</html>